{
  "locale": "en_US.UTF-8",
  "keyboard_layout": "br-abnt2",
  "mirror_region": "Brazil",
  "timezone": "America/Sao_Paulo",
  "hostname": "archlinux",
  "bootloader": "systemd-bootctl",
  "kernels": ["linux-zen", "linux-lts"],
  "profile": "minimal",
  "audio": "pipewire",
  "network_configuration": {
    "type": "dhcp"
  },
  "disk_config": {
    "config_type": "manual_partitioning",
    "device_modifications": [
      {
        "device": "/dev/sda",
        "wipe": true,
        "partitions": [
          {
            "mountpoint": "/boot",
            "size": "512M",
            "filesystem": {
              "format": "vfat"
            },
            "status": "create",
            "part_type": "efi",
            "start": {
              "value": 2048,
              "unit": "sectors"
            },
            "sector_size": {
              "value": 512,
              "unit": "B"
            }
          },
          {
            "mountpoint": "/",
            "size": "100%",
            "filesystem": {
              "format": "btrfs"
            },
            "status": "create",
            "start": {
              "value": 1050624,
              "unit": "sectors"
            },
            "sector_size": {
              "value": 512,
              "unit": "B"
            },
            "mount_options": "compress=zstd,noatime",
            "btrfs_subvolumes": {
              "@": "/",
              "@home": {
                "mountpoint": "/home",
                "create": true,
                "mount_options": "compress=zstd,noatime"
              },
              "@snapshots": {
                "mountpoint": "/.snapshots",
                "mount_options": "compress=zstd,noatime"
              },
              "@var_log": {
                "mountpoint": "/var/log",
                "mount_options": "compress=zstd,noatime"
              }
            }
          }
        ]
      }
    ]
  },
  "users": {
    "usuario": {
      "password": "senha123",
      "sudo": true,
      "shell": "/bin/bash"
    }
  },
  "additional_packages": [
    "zram-generator",
    "snapper",
    "btrfs-progs",
    "grub-btrfs",
    "efibootmgr",
    "git",
    "htop",
    "neovim",
    "fastfetch"
  ],
  "install_reboot": false
}
